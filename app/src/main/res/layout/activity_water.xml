<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/water"
    tools:context=".Water">

    <TextView
        android:id="@+id/watertext"
        android:layout_width="408dp"
        android:layout_height="52dp"
        android:text="        WATER COMPLAINTS"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/watername"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="142dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/phnowater"
        android:layout_width="282dp"
        android:layout_height="66dp"
        android:layout_alignEnd="@+id/addresswater"
        android:layout_alignParentTop="true"
        android:layout_marginTop="222dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:inputType="phone"
        android:text="PH. NO."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/addresswater"
        android:layout_width="284dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="320dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="ADDRESS"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/complaintwater"
        android:layout_width="288dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="440dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="COMPLAINTS-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="30sp" />

    <Button
        android:id="@+id/postwater"
        android:layout_width="244dp"
        android:layout_height="72dp"
        android:layout_alignEnd="@+id/watername"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="72dp"
        android:layout_marginBottom="60dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="POST"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF" />
</RelativeLayout>